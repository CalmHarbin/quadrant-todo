{
    "name": "quadrant-todo",
    "version": "1.0.0",
    "description": "四象限 TODO 桌面应用",
    "main": "dist-electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "build:win": "vite build && electron-builder --win",
        "build:mac": "vite build && electron-builder --mac",
        "build:linux": "vite build && electron-builder --linux",
        "type-check": "vue-tsc --noEmit",
        "preview": "vite preview",
        "electron:dev": "vite build && electron .",
        "app:build": "vue-tsc && vite build",
        "app:preview": "vite preview"
    },
    "keywords": [
        "electron",
        "vue",
        "typescript",
        "todo",
        "quadrant"
    ],
    "author": "Developer",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@vitejs/plugin-vue": "^5.0.3",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vite-plugin-electron": "^0.28.4",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vue-tsc": "^2.0.29"
    },
    "dependencies": {
        "@milkdown/core": "^7.3.4",
        "@milkdown/preset-commonmark": "^7.3.4",
        "@milkdown/theme-nord": "^7.3.4",
        "@milkdown/vue": "^7.3.4",
        "@prosemirror-adapter/vue": "^0.2.6",
        "@types/jszip": "^3.4.0",
        "@vicons/ionicons5": "^0.13.0",
        "jszip": "^3.10.1",
        "naive-ui": "^2.38.1",
        "pinia": "^2.1.7",
        "vue": "^3.4.15"
    },
    "build": {
        "appId": "com.example.quadrant-todo",
        "productName": "四象限TODO",
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "resources/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
